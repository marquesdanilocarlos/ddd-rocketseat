{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "ESNext",
    "types": ["vitest/globals", "node"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",       // Pasta onde os arquivos JS compilados ser√£o salvos
    "rootDir": "./src"
  },
  "include": ["src"]
}