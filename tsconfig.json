{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "ESNext",
    "types": ["vitest/globals"],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}